<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer grey border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D3D3D3" /> <!-- Light grey color -->
        </shape>
    </item>

    <!-- Inner transparent circle to give a hollow effect -->
    <item android:insetLeft="4dp" android:insetTop="4dp" android:insetRight="4dp" android:insetBottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>